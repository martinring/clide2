# Authentication
POST    /api/auth/login                     controllers.Authentication.login
GET     /api/auth/validateSession           controllers.Authentication.validateSession
POST    /api/auth/signup                    controllers.Authentication.signup
GET     /api/auth/logout                    controllers.Authentication.logout

# Projects
GET     /api/projects/:user                 controllers.Projects.index(user)
PUT     /api/projects/:user                 controllers.Projects.put(user)
DELETE  /api/projects/:user/:project        controllers.Projects.delete(user,project)
GET     /api/:user/:project/@session        controllers.Projects.session(user,project)

# File System
GET     /api/projects/:user/:project        controllers.Files.getTree(user,project)
PUT     /api/projects/:user/:project        controllers.Files.newFile(user,project,path="")
PUT     /api/projects/:user/:project/*path  controllers.Files.newFile(user,project,path)
DELETE  /api/projects/:user/:project/*path  controllers.Files.deleteFile(user,project,path)

# Javascript routing
GET     /client/javascripts/routes.js       controllers.Application.javascriptRoutes

# Webjars
GET     /client/libs/*file                  controllers.WebJarAssets.at(file)

# Map static resources from the /public folder to the /assets URL path
GET     /client/*file                       controllers.Assets.at(path="C:/Users/Martin/Documents/Projects/clide2/public", file)

# Home page
GET     /                                   controllers.Application.index(path="")
GET     /*path                              controllers.Application.index(path)