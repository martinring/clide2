# Authentication
POST    /login                              controllers.Application.authenticate
GET     /logout                             controllers.Application.logout

# Javascript routing
GET     /assets/javascripts/routes.js       controllers.Application.javascriptRoutes

# Webjars
GET     /assets/javascripts/lib/require.js  controllers.WebJarAssets.requirejs
GET     /assets/javascripts/lib/*file       controllers.WebJarAssets.at(file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)

# Home page
GET     /                                   controllers.Application.index
GET     /*path                              controllers.Application.any(path)